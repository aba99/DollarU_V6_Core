package com.orsyp.tools.ps;

/**
 * Configuration having the customer specific data
 */
public class CustomerConfiguration {

    private final String customerNumber;
    private final String customerName;
    private final String username;
    private final String department;
    private final String email;
    private final String firstName;
    private final String lastName;

    public CustomerConfiguration(String customerNumber,
                                 String customerName,
                                 String username,
                                 String department,
                                 String email,
                                 String firstName,
                                 String lastName) {
        this.customerNumber = customerNumber;
        this.customerName = customerName;
        this.username = username;
        this.department = department;
        this.email = email;
        this.firstName = firstName;
        this.lastName = lastName;
    }

    public String getClientTitle() {
        return customerNumber + ":" + customerName;
    }

    public String getDepartment() {
        return department;
    }


    public String getUser() {
        return username;
    }

    public String getFirstName() {
        return firstName;
    }

    public String getLastName() {
        return lastName;
    }

    public String getEmail() {
        return email;
    }

    public String getCustomerName() {
        return customerName;
    }

    public String getCustomerNumber() {
        return customerNumber;
    }

    public String getAdminUserAndDepartment() {
        return String.format("%s/%s",username,department);
    }


    @Override
    public String toString() {
        return "CustomerConfiguration{" +
                "customerNumber='" + customerNumber + '\'' +
                ", customerName='" + customerName + '\'' +
                ", username='" + username + '\'' +
                ", department='" + department + '\'' +
                ", email='" + email + '\'' +
                ", firstName='" + firstName + '\'' +
                ", lastName='" + lastName + '\'' +
                '}';
    }
}
