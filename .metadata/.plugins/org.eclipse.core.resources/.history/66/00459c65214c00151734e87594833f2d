package com.orsyp.client.amex;

import java.io.File;
import java.io.IOException;
import java.util.ArrayList;
import java.util.HashMap;
import java.util.Scanner;

import com.orsyp.tools.ps.Connector;



public class RemoveSTATDeps {

	static HashMap<String,ArrayList<String>> uproc_listOfDepsToBeRemoved = new HashMap<String,ArrayList<String>>();
	static int count = 1;
	
	public static void main(String[] args) throws Exception {

		String fileName = args[0];
		String xmlFile_1 = args[1];
		String xmlFile_2 = args[2];
		
		
		
		readFile(xmlFile_1);
		readFile(xmlFile_2);
		
		Connector conn = new Connector(fileName,true,"",false,"",false,"");
		for(String uprKey:conn.getConnectionList().get(0).getUprocHashMap_from_outside().keySet())
		{
			if(uproc_listOfDepsToBeRemoved.containsKey(uprKey))
			//conn.getConnectionList().get(0).setSessionControlOnUproc(uprKey);
			{
				conn.getConnectionList().get(0).removeDepsFromUproc(uprKey,uproc_listOfDepsToBeRemoved.get(uprKey) );
			}
			
		}
	}	
		
	private static void readFile(String file) throws IOException
	{ 
		
	
		String flag_1="MEMNAME=\"";
		String flag_2="<INCOND NAME=";
		String flag_3="ODATE=\"STAT\" />";
		String flag_4="</JOB>";
		
		String delim_1 = "-";
		String delim_2 = "_";
		 
		try (Scanner sc = new Scanner(new File(file), "UTF-8")) {
		        while (sc.hasNextLine()) 
		        {
		            String line = sc.nextLine();
		           
		            if(line.contains(flag_1))
		            {
		            	String foundMemname = line.substring(line.indexOf(flag_1)+flag_1.length(), line.length()).replace("\"", "").trim();
		            	ArrayList<String> listOfIncondWithStat = new ArrayList<String>();
		            	
		            	String interline = sc.nextLine();
		            		
		            		while(!interline.contains(flag_4))
		            		{
		            			
		            			if(interline.contains(flag_2))
		            			{
		            				@SuppressWarnings("unused")
									String interline_1 = sc.nextLine();//skip
		    		            	String interline_2 = sc.nextLine();
		    		            	
		    		            	if(interline_2.equals(flag_3))
		    		            	{
		    		            			String dep = interline.substring(line.indexOf(delim_1)+1,interline.indexOf(delim_2));
		            				
		    		            			listOfIncondWithStat.add(dep);
		    		            	}
		            			}
		            			
		            			interline=sc.nextLine();
		            		}
				            uproc_listOfDepsToBeRemoved.put(foundMemname, listOfIncondWithStat);
				            //System.out.println("Uproc <"+foundMemname+"> has STAT dependencies "+listOfIncondWithStat);

		            		line=sc.nextLine();
		            		
		            }
		            	
		        } 	
		           
		       
		        // note that Scanner suppresses exceptions
		        if (sc.ioException() != null) {
		            throw sc.ioException();
		        }
	}


	}}

